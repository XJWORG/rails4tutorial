<% provide(:title , 'Sample App') %>
<!DOCTYPE html>
<html>
<head>
    <title>StaticPages#Sample App</title>
</head>
<body>
    <% if sign_in? %>
        <div>
        <aside class="span4">
            <section>
                <%= render "shared/user_info"%>
            </section>
            <section>
                <%= render "shared/micropost_form"%>
            </section>
        </aside>
        </div>
    <% else %>

    <div class="center hero-unit">
        <h1>StaticPages#Sample App</h1>
        <p>Find me in app/views/static_pages/home.html.erb</p>
        <%= link_to "sign up now" , '#' , class: "btn btn-large btn-primary" %>
    </div>
    <%= link_to image_tag("rails.svg",alt: "rails") , 'http://rubyonrails.org/' %>
    <% end %>
</body>
</html>


